{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Makim Configuration Schema",
  "type": "object",
  "required": ["version", "groups"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+.*$",
      "description": "Version of the Makim configuration."
    },
    "env-file": {
      "type": "string",
      "description": "Path to the environment file."
    },
    "backend": {
      "type": "string",
      "description": "Shell backend to use."
    },
    "groups": {
      "type": "object",
      "description": "Task groups defined by the user.",
      "patternProperties": {
        "^[a-zA-Z0-9_-]+$": {
          "type": "object",
          "required": ["help", "tasks"],
          "properties": {
            "help": {
              "type": "string",
              "description": "Description of the group."
            },
            "env-file": {
              "type": "string",
              "description": "Path to the environment file for the group."
            },
            "env": {
              "type": "object",
              "description": "Environment variables for the group.",
              "additionalProperties": {
                "type": "string"
              }
            },
            "vars": {
              "type": "object",
              "description": "Variables for the group.",
              "additionalProperties": {
                "type": ["string", "number", "boolean", "array", "object"]
              }
            },
            "tasks": {
              "type": "object",
              "description": "Tasks within the group.",
              "patternProperties": {
                "^[a-zA-Z0-9_-]+$": {
                  "type": "object",
                  "required": ["help", "run"],
                  "properties": {
                    "help": {
                      "type": "string",
                      "description": "Description of the task."
                    },
                    "backend": {
                      "type": "string",
                      "description": "Shell backend for the task."
                    },
                    "run": {
                      "type": "string",
                      "description": "Command to execute."
                    },
                    "env-file": {
                      "type": "string",
                      "description": "Path to the environment file for the task."
                    },
                    "env": {
                      "type": "object",
                      "description": "Environment variables for the task.",
                      "additionalProperties": {
                        "type": "string"
                      }
                    },
                    "args": {
                      "type": "object",
                      "description": "Arguments for the task.",
                      "patternProperties": {
                        "^[a-zA-Z0-9_-]+$": {
                          "type": "object",
                          "required": ["help", "type"],
                          "properties": {
                            "help": {
                              "type": "string",
                              "description": "Description of the argument."
                            },
                            "type": {
                              "type": "string",
                              "enum": ["str", "bool"],
                              "description": "Type of the argument."
                            },
                            "default": {
                              "type": ["string", "boolean"],
                              "description": "Default value for the argument."
                            },
                            "required": {
                              "type": "boolean",
                              "description": "Whether the argument is required."
                            },
                            "action": {
                              "type": "string",
                              "enum": ["store_true"],
                              "description": "Action to perform with the argument."
                            }
                          },
                          "additionalProperties": false
                        }
                      }
                    },
                    "hooks": {
                      "type": "object",
                      "description": "Hooks for the task.",
                      "properties": {
                        "pre-run": {
                          "type": "array",
                          "description": "Tasks to run before this task.",
                          "items": {
                            "type": "object",
                            "required": ["task"],
                            "properties": {
                              "task": {
                                "type": "string",
                                "description": "Name of the task to run."
                              },
                              "args": {
                                "type": "object",
                                "description": "Arguments to pass to the dependency task.",
                                "additionalProperties": {
                                  "type": ["string", "boolean"]
                                }
                              },
                              "if": {
                                "type": "string",
                                "description": "Conditional expression to execute the task."
                              }
                            },
                            "additionalProperties": false
                          }
                        },
                        "post-run": {
                          "type": "array",
                          "description": "Tasks to run after this task.",
                          "items": {
                            "type": "object",
                            "required": ["task"],
                            "properties": {
                              "task": {
                                "type": "string",
                                "description": "Name of the task to run."
                              },
                              "args": {
                                "type": "object",
                                "description": "Arguments to pass to the dependency task.",
                                "additionalProperties": {
                                  "type": ["string", "boolean"]
                                }
                              },
                              "if": {
                                "type": "string",
                                "description": "Conditional expression to execute the task."
                              }
                            },
                            "additionalProperties": false
                          }
                        }
                      },
                      "additionalProperties": false
                    },
                    "matrix": {
                      "type": "object",
                      "description": "Matrix variables for the task.",
                      "patternProperties": {
                        "^[a-zA-Z0-9_-]+$": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  },
                  "additionalProperties": false
                }
              }
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
