{
  "branches": ["main"],
  "tagFormat": "${version}",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits"
      }
    ],
    [
      "semantic-release-replace-plugin",
      {
        "replacements": [
          {
            "files": ["src/makim/__init__.py"],
            "from": "__version__ = '.*'  # semantic-release",
            "to": "__version__ = '${nextRelease.version}'  # semantic-release",
            "results": [
              {
                "file": "src/makim/__init__.py",
                "hasChanged": true,
                "numMatches": 1,
                "numReplacements": 1
              }
            ],
            "countMatches": true
          },
          {
            "files": ["pyproject.toml"],
            "from": "version = \".*\"  # semantic-release",
            "to": "version = \"${nextRelease.version}\"  # semantic-release",
            "results": [
              {
                "file": "pyproject.toml",
                "hasChanged": true,
                "numMatches": 1,
                "numReplacements": 1
              }
            ],
            "countMatches": true
          }
        ]
      }
    ],
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogTitle": "# Release Notes\n---",
        "changelogFile": "docs/changelog.md"
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "poetry build",
        "publishCmd": "poetry publish",
        "successCmd": "pyinstaller --onefile -n makim --add-data 'src/makim/schema.json:.' src/makim/__main__.py "
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": ["dist/**"]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "pyproject.toml",
          "docs/changelog.md",
          "src/makim/__init__.py"
        ],
        "message": "chore(release): ${nextRelease.version}"
      }
    ]
  ]
}
